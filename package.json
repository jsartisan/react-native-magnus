{
  "name": "react-native-magnus",
  "version": "1.0.61",
  "description": "A Utility-First React Native UI Framework",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index.tsx",
  "source": "src/index.tsx",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "react-native-magnus.podspec"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint --ext .js,.ts,.tsx .",
    "prepare": "bob build",
    "pre-commit": "pretty-quick --staged && yarn typescript",
    "release": "release-it",
    "example:expo": "yarn --cwd examples/with-expo",
    "docs": "yarn --cwd docs",
    "bootstrap": "yarn example && yarn docs && yarn"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/jsartisan/react-native-magnus",
  "author": "jsartisan <pawan.stardust@gmail.com> (https://github.com/jsartisan)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jsartisan/react-native-magnus/issues"
  },
  "homepage": "https://github.com/jsartisan/react-native-magnus#readme",
  "dependencies": {
    "deepmerge": "^4.2.2",
    "expo-yarn-workspaces": "^1.3.1",
    "validate-color": "^2.1.1"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^8.3.4",
    "@react-native-community/bob": "^0.11.0",
    "@react-native-community/eslint-config": "^1.1.0",
    "@release-it/conventional-changelog": "^1.1.4",
    "@types/color": "^3.0.1",
    "@types/jest": "^26.0.20",
    "@types/react": "^17.0.0",
    "@types/react-native": "0.63.42",
    "@types/react-native-vector-icons": "^6.4.1",
    "@types/react-test-renderer": "^17.0.0",
    "color": "^3.1.2",
    "commitlint": "^8.3.5",
    "deepmerge": "^4.2.2",
    "editorconfig": "^0.15.3",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "react": "~16.9.0",
    "react-native": "~0.63.1",
    "react-native-animatable": "^1.3.3",
    "react-native-modal": "^11.5.6",
    "react-native-testing-library": "^6.0.0",
    "react-test-renderer": "^17.0.1",
    "release-it": "^13.5.8",
    "typescript": "^4.1.3"
  },
  "peerDependencies": {
    "color": "^3.1.2",
    "deepmerge": "^4.2.2",
    "react": "*",
    "react-native": "*",
    "react-native-animatable": "^1.3.3",
    "react-native-modal": "^11.5.6",
    "react-native-vector-icons": "^6.6.0",
    "validate-color": "^2.1.1"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/",
      "<rootDir>/docs/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "release-it": {
    "git": {
      "requireUpstream": false,
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  }
}
