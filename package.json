{
  "name": "react-native-magnus",
  "version": "1.0.46",
  "description": "A Utility-First React Native UI Framework",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index.tsx",
  "source": "src/index.tsx",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "react-native-magnus.podspec"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint --ext .js,.ts,.tsx .",
    "prepare": "bob build",
    "pre-commit": "pretty-quick --staged && yarn typescript",
    "release": "release-it",
    "example": "yarn --cwd example",
    "docs": "yarn --cwd docs",
    "pods": "node -e \"process.exit(require('os').platform() !== 'darwin')\" && test -d example/ios && cd example/ios && pod install || printf ''",
    "bootstrap": "yarn example && yarn docs && yarn && yarn pods"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/jsartisan/react-native-magnus",
  "author": "jsartisan <pawan.stardust@gmail.com> (https://github.com/jsartisan)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jsartisan/react-native-magnus/issues"
  },
  "homepage": "https://github.com/jsartisan/react-native-magnus#readme",
  "dependencies": {},
  "devDependencies": {
    "@commitlint/config-conventional": "^8.3.4",
    "@react-native-community/bob": "^0.11.0",
    "@react-native-community/eslint-config": "^1.1.0",
    "@release-it/conventional-changelog": "^1.1.4",
    "@types/color": "^3.0.1",
    "@types/jest": "^25.2.1",
    "@types/react": "^16.9.19",
    "@types/react-native": "0.63.2",
    "@types/react-native-vector-icons": "^6.4.1",
    "color": "^3.1.2",
    "commitlint": "^8.3.5",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "react": "~16.9.0",
    "react-native": "~0.63.1",
    "react-native-animatable": "^1.3.3",
    "react-native-modal": "^11.5.6",
    "release-it": "^13.5.8",
    "typescript": "^3.8.3"
  },
  "peerDependencies": {
    "color": "^3.1.2",
    "react": "*",
    "react-native": "*",
    "react-native-animatable": "^1.3.3",
    "react-native-modal": "^11.5.6",
    "react-native-vector-icons": "^6.6.0"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "eslintConfig": {
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": false,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "release-it": {
    "git": {
      "requireUpstream": false,
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  }
}
